<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_search_24" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/group_10833" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/nunito_sans"
        android:text="Good morning "
        android:textColor="@color/unnamed_color_707070"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="Steve Mwaura"
        android:textColor="@color/unnamed_color_03045e"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView18"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scroll_view1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scrollbarSize="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView5">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/jan_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:text="January"
                android:textSize="12sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/feb_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="February" />

            <com.google.android.material.chip.Chip
                android:id="@+id/mar_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="March" />

            <com.google.android.material.chip.Chip
                android:id="@+id/apr_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="April" />

            <com.google.android.material.chip.Chip
                android:id="@+id/may_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May" />

            <com.google.android.material.chip.Chip
                android:id="@+id/jun_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="June" />

            <com.google.android.material.chip.Chip
                android:id="@+id/jul_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="July" />

            <com.google.android.material.chip.Chip
                android:id="@+id/aug_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="August" />

            <com.google.android.material.chip.Chip
                android:id="@+id/sep_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="September" />

            <com.google.android.material.chip.Chip
                android:id="@+id/oct_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="October" />

            <com.google.android.material.chip.Chip
                android:id="@+id/nov_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="November" />

            <com.google.android.material.chip.Chip
                android:id="@+id/dec_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="December" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_social_notifications_24px" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/verify_animation"
        android:layout_width="228dp"
        android:layout_height="228dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lf31696_file_upload" />

    <Button
        android:id="@+id/button"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:background="@drawable/continue_btn"
        android:text="IMPORT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/nunito_sans"
        android:text="Kindly import your Mpesa messages and Bank statements to view your transactions analysis"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view1" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="KSH"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />


</androidx.constraintlayout.widget.ConstraintLayout>