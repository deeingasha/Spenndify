<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spenndify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/unnamed_color_03045e</item>
        <item name="colorPrimaryVariant">@color/unnamed_color_F7F7F7</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/unnamed_color_03045e</item>
        <item name="colorSecondaryVariant">@color/unnamed_color_03045e</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- verify popup theme -->
    <style name="Theme.App.VerifyPopup" parent="Theme.MaterialComponents.DayNight.DialogWhenLarge">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="keypad_buttons_style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <!-- pin views theme theme -->
    <style name="pin_views">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:background">@drawable/inactive_pinview_bg</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_width">16dp</item>
    </style>

    <style name="rounded_toggle">
        <item name="cornerRadius">30dp</item>
    </style>

</resources>
